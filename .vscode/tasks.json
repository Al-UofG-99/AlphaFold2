{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "docker-run",
            "label": "docker-run: debug",
            "dockerRun": {
                "containerName": "af2_serverless_dev",
                "image": "af2_serverless_dev:alpha",
                "volumes": [
                    {
                        "localPath": "${workspaceFolder}",
                        "containerPath": "/app/alphafold"
                    },
                    {
                        "localPath": "${workspaceFolder}/test",
                        "containerPath": "/app/data/"
                    },
                ]
            },
            "python": {
                "file": "/app/alphafold/run_alphafold.py",
                "args": [
                    "--precomputed_msa",
                    "/app/data/PF02518_seed.fasta",
                    "--output_dir",
                    "/app/data/output",
                    "--data_dir",
                    "/app/data/data"
                ]
            }
        }
    ]
}